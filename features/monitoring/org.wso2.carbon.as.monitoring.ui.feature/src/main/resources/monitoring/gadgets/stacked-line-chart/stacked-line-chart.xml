<?xml version="1.0" encoding="UTF-8" ?>
    <Module>
    <ModulePrefs title="Stacked Line Chart"
                 author="WSO2 Gadget Server"
                 height="230"
                 scrolling="true"  category="Templates"
                 tags="charts,stacked,visualization,template"
                 description="A generic Stacked Chart gadget, takes a json datasource as an input. It can be be configured to fetch data in defined intervals. This gadget can be used to create dashboards with statistical data. This gadget can be reused as an iframe in any web page as it is self contained">
        <Require feature="pubsub-2">
            <Param name="topics">
                <![CDATA[
                <Topic title="" name="wso2.gadgets.charts.timeRangeChange"
                description="time range for filtering has been changed" type="object"
                subscribe="true"/>

                <Topic title="" name="wso2.gadgets.charts.ipChange"
                description="ip for filtering has been changed" type="string"
                subscribe="true"/>
                ]]>
            </Param>
        </Require>
    </ModulePrefs>
    <UserPref name="dataSource"
              display_name="Data Source"
              default_value="/publisher/config/defaults/gadgets/stacked-line-chart/datasource/dataFile1.jag">
    </UserPref>
    <UserPref name="appname"
              display_name="Web App Name"
              default_value="">
    </UserPref>
    <UserPref name="startTime"
              display_name="Start time"
              default_value="">
    </UserPref>
    <UserPref name="endTime"
              display_name="End time"
              default_value="">
    </UserPref>
    <UserPref name="node"
              display_name="Node IP"
              default_value="">
    </UserPref>
    <!--UserPref name="options"
              display_name="Chart Options"
              default_value="/portal/gadgets/stacked-chart/js/options-stack.js">
    </UserPref-->
    <UserPref name="appStatType"
              display_name="App Stat Type"
              default_value="request">
    </UserPref>
    <Content type="html">
    <![CDATA[
 <html>
 <head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>Bar Chart</title>
